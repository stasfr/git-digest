{
  "name": "@stas_fr/git-digest",
  "version": "0.2.0",
  "description": "An intelligent CLI tool that uses AI to analyze git commits and generate a clear, human-readable report.",
  "main": "dist/src/cli/index.js",
  "bin": {
    "gtc": "dist/src/cli/index.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "docs/README.md"
  ],
  "scripts": {
    "dev": "tsx --watch --env-file .env src/cli/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "cli",
    "commits",
    "reports",
    "ai",
    "summary",
    "llm",
    "developer-tools",
    "productivity"
  ],
  "author": {
    "name": "Farkash Stanislav",
    "url": "https://stasfr.ru/"
  },
  "license": "MIT",
  "homepage": "https://github.com/stasfr/git-digest#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stasfr/git-digest.git"
  },
  "bugs": {
    "url": "https://github.com/stasfr/git-digest/issues"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "openai": "^5.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.2.0",
    "eslint": "^9.32.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0"
  }
}
